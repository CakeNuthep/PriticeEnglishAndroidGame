<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
                android:id="@+id/btnEffecSound"
                android:layout_width="@dimen/effectSoundSettingWidht"
                android:layout_height="@dimen/effectSoundSettingHeight"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/mute"/>
            <SeekBar
                android:id="@+id/seekBar_effectSound"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="15dp"
                android:minWidth="15dp"
                android:maxHeight="15dp"
                android:maxWidth="15dp"
                android:progress="50"
                android:splitTrack="false"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumb="@drawable/custom_thumb" />

            <!--must have Effect Sound in setting Fragment-->
        </LinearLayout>
        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
            android:id="@+id/btnBackSettingFragment"
            android:layout_width="@dimen/backButtonSettingWidht"
            android:layout_height="@dimen/backButtonSettingHeight"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/backbutton"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>