<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">


        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:id="@+id/customViewGroupHeartImageView1"
            android:layout_width="@dimen/heartWidht"
            android:layout_margin="1dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:src="@drawable/full_heart"/>

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:id="@+id/customViewGroupHeartImageView2"
            android:layout_width="@dimen/heartWidht"
            android:layout_margin="1dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:src="@drawable/full_heart"/>

        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:id="@+id/customViewGroupHeartImageView3"
            android:layout_width="@dimen/heartWidht"
            android:layout_margin="1dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:src="@drawable/full_heart"/>
    </LinearLayout>
</LinearLayout>