<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridView
            android:id="@+id/quizeGridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:columnWidth="@dimen/quizeWidht"
            android:gravity="center_horizontal"
            android:verticalSpacing="30dp"
            android:horizontalSpacing="10dp"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:layout_centerInParent="true"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:background="@drawable/background"
            android:paddingBottom="@dimen/backButtonQuizeFragmentHeight"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center">

            <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageButton
                android:id="@+id/btnBackQuizeFragment"
                android:layout_width="@dimen/backButtonSettingWidht"
                android:layout_height="@dimen/backButtonQuizeFragmentHeight"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:src="@drawable/backbutton"/>
            <TextView
                android:id="@+id/textUpdateData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="@dimen/dateTimeUpdateTextSize"
                android:text="" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/loadFrameLayoutFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/loadProgressBarQuizeFragment"
                style="@android:style/Widget.Holo.Light.ProgressBar.Large"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:clickable="true"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/loading"
                android:textSize="@dimen/loadingTextSize"
                android:gravity="center"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>