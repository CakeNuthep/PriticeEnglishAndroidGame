<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/fav_grid_single_Front"
            android:layout_width="@dimen/cardWidht"
            android:layout_height="@dimen/cardHeight"
            android:background="@drawable/customborder"
            android:alpha="0"
            android:layout_margin="2dp">
            <RelativeLayout
                android:layout_width="@dimen/cardWidht"
                android:layout_height="@dimen/cardHeight"
                android:background="@android:color/white">

                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView

                    android:id="@+id/customviewGroupCardFrontPlayImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:src="@drawable/sound"
                    />
                <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                    android:id="@+id/closePlayImageView"
                    android:layout_width="@dimen/closeWidht"
                    android:layout_height="@dimen/closeHeight"
                    android:layout_margin="@dimen/closeMargin"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:src="@drawable/close"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:gravity="center">

                    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">


                    <TextView
                        android:id="@+id/customviewGroupCardPlayTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/textSizeVocap"
                        android:textColor="@android:color/black"/>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fav_grid_single_Back"
            android:layout_width="@dimen/cardWidht"
            android:layout_height="@dimen/cardHeight"
            android:background="@drawable/back_card"
            android:alpha="1"
            android:layout_margin="2dp"
            >
            <FrameLayout
                android:layout_width="@dimen/cardWidht"
                android:layout_height="@dimen/cardHeight">
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>