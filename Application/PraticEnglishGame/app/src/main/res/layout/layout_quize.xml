<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="@dimen/quizeWidht"
        android:layout_height="@dimen/quizeHeight">
        <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
            android:id="@+id/customViewGroupQuizeImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/customborder"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/customViewGroupQuizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quize ?"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                />

            <com.language.cake.praticenglishgame.view.HeartCustomViewGroup
                android:id="@+id/heartCustomviewGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>